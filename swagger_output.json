    "/montaPc": {
      "post": {
        "description": "Endpoint para calcular a peças necessárias com base em varios requisitos",
        "parameters": [
          {
            "name": "requisitos",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "requisitos": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "Armazenamento": {
                        "type": "string",
                        "example": " 100 GB available space"
                      },
                      "Cpu": {
                        "type": "string",
                        "example": " Intel Core i5-2500K@3.3GHz or AMD FX 6300@3.5GHz"
                      },
                      "Gpu": {
                        "type": "string",
                        "example": " Nvidia GeForce GTX 780 (3 GB) or AMD Radeon R9 290 (4GB)"
                      },
                      "Ram": {
                        "type": "string",
                        "example": " 8 GB RAM"
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Calculado com sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "placa": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "example": "GeForce GTX 1660"
                    }
                  }
                },
                "ram": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "example": "8GB DDR4"
                    }
                  }
                },
                "rom": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "example": "240GB"
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Erro ao calcular.",
            "schema": {
              "type": "object",
              "properties": {
                "erro": {
                  "type": "string",
                  "example": "Menssagem."
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
